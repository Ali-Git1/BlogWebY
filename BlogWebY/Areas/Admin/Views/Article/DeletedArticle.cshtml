@model List<ArticleDto>

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Cop kutusu</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <table class="table table-bordered" id="articlesTable" with="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Baslik</th>
                        <th>Kategoru</th>
                        <th>Olusturulma tarihi</th>
                        <th>Olusturan</th>
                        <th>Durum</th>
                        <th>Islemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Baslik</th>
                        <th>Kategoru</th>
                        <th>Olusturulma tarihi</th>
                        <th>Olusturan</th>
                        <th>Durum</th>
                        <th>Islemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <th>@article.Title</th>
                            <th>@article.Category.Name</th>
                            <th>@article.CreatedDate.ToShortDateString()</th>
                            <th>@article.CreatedBy</th>
                            <th>@(article.IsDeleted ? "Aktif Degil" : "Aktif")</th>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-articleId="@article.Id"><i class="bx bx-undo"></i></a>
@*                                 <a class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-minus-circle"></i></a>
 *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->




</div>

@section Scripts {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}
