@model List<ArticleDto>

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yonetimi</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Table Basic</h5>
        <div class="table table-bordered text-nowrap">
            <table class ="table table-bordered" id="articlesTables" with="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Baslik</th>
                        <th>Kategoru</th>
                        <th>Olusturulma tarihi</th>
                        <th>Olusturan</th>
                        <th>Durum</th>
                        <th>Islemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Baslik</th>
                        <th>Kategoru</th>
                        <th>Olusturulma tarihi</th>
                        <th>Olusturan</th>
                        <th>Durum</th>
                        <th>Islemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <th>@article.Title</th>
                            <th>@article.Category.Name</th>
                            <th>@article.CreatedDate.ToShortDateString()</th>
                            <th>@article.CreatedBy</th>
                            <th>@(article.IsDeleted ? "Aktif Degil" : "Aktif")</th>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

   


</div>

@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}